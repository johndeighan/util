# console-utils.lib.civet

import {encode} from 'llutils'

# ---------------------------------------------------------------------------

export write := (str: string): void =>
	Deno.stdout.writeSync encode str
	return

# ---------------------------------------------------------------------------

export writeln := (str: string = ''): void =>
	write str
	write '\n'
	return

# ---------------------------------------------------------------------------

export clearScreen := (): void =>
	write '\x1b[H\x1b[2J'
	return

# ---------------------------------------------------------------------------

export resetLine := (): void =>
	write '\r'
	write "\x1b[K"
	return
# ---------------------------------------------------------------------------