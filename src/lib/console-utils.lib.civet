# console-utils.lib.civet

encoder := new TextEncoder()

# ---------------------------------------------------------------------------

export write := (str: string): void =>

	Deno.stdout.writeSync encoder.encode(str)
	return

# ---------------------------------------------------------------------------

export writeln := (str: string = ''): void =>

	write str + '\n'
	return

# ---------------------------------------------------------------------------

export clearScreen := (): void =>

	write '\x1b[H\x1b[2J'
	return

# ---------------------------------------------------------------------------

export resetLine := (): void =>

	write '\r'
	write "\x1b[K"
	return
